<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
        <% if show_link %>
          <%= link_to car.model, car %>
        <% else %>
          <%= car.model %>
        <% end %>
      </p>

      <p>manufacturer: <%= link_to car.manufacturer.name, car.manufacturer %></p>

      <footer class="card-footer">
        <div class="card-footer-item">
          <% if cart.include?(car) %>
            <%= button_to cart_path(car), method: :delete, class: 'remove-from-cart' do %>
            âž– Remove From Cart âž–
            <% end %>
            <%= form_with url: checkout_create_path, remote: true do %>
              <%= hidden_field_tag(:car_id, car.id) %>
              <%= button_tag 'ðŸ’³ Buy Now' %>
            <% end %>
          <% else %>
            <%= form_with url: cart_index_path, method: :post do %>
              <%= hidden_field_tag(:id, car.id) %>
              <%= button_tag 'âž• Add to Cart âž•' %>
            <% end %>
          <% end %>
        </div>
      </footer>

      <% if car.image.present? %>
        <div class="card-image">
          <figure class="image">
            <%= image_tag (car.image), size:"200x200" %>
          </figure>
        </div>
      <% end %>

    </div>
      <footer class="card-footer">
        <p class="card-footer-item">
          Price: <br>$<%= car.price / 100.0 %>
        </p>
        <p class="card-footer-item">
          brand: <br><%= car.brand %>
        </p>
        <p class="card-footer-item">
          Year: <br><%= car.year %>
        </p>
        <p class="card-footer-item">
          Title Status: <br><%= car.title_status %>
        </p>
              <p class="card-footer-item">
          Mileage: <br><%= car.mileage %>
        </p>
        <p class="card-footer-item">
          Color: <br><%= car.color %>
        </p>
        <p class="card-footer-item">
          Vehicle Identification Number: <br><%= car.vin %>
        </p>
              <p class="card-footer-item">
          Lot number associated with the car: <br><%= car.lot %>
        </p>
              <p class="card-footer-item">
          state: <br><%= car.state %>
        </p>
        <p class="card-footer-item">
          condition: <br><%= car.condition %>
        </p>
      </footer>
  </div>
</div>


