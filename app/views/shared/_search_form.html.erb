<%= form_with(url: search_cars_path, local: true, method: "get", class: 'mt-5 mb-5') do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag(:search_term, nil, class: 'input', placeholder: 'Search By model') %>
    </div>
    <br>

    <!--<div>
      <select name="model" class="input">
        <option value="" disabled selected>Select car </option>
      </select>
    </div>-->

    <div class="control">
      <%= submit_tag("Search", class: "button is-info") %>
    </div>
  </div>
<% end %>
<p>
  Found <%= pluralize(@cars&.size.to_i, 'result') %>
  for the search term "<%= params[:search_term] %>".
</p>