      Cart:
      <sup><%= cart.size %></sup>
      <ul class="card">
        <% cart.each do |c| %>
          <li class="card-content">
            <%= c.brand %>-<%= c.model %>
            <%= button_to 'â– Remove From Cart â–', cart_path(c), method: :delete%>
            <%= form_with url: checkout_create_path, remote: true do |form| %>
              <%= form.hidden_field :car_id, value: c.id %>
              <input type="number" name="quantity" value="1" min="1" onchange="actualizarSubtotal(this)">
              <%= form.button 'ğŸ’³ Buy Now' %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
